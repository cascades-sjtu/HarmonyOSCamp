<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:width="match_parent">

    <DirectionalLayout
        ohos:alignment="center"
        ohos:background_element="$graphic:background_round"
        ohos:height="216vp"
        ohos:left_margin="30vp"
        ohos:right_margin="30vp"
        ohos:top_margin="10vp"
        ohos:bottom_margin="15vp"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="60vp"
            ohos:bottom_margin="25vp"
            ohos:background_element="$graphic:background_ability_remote_input"
            ohos:alignment="center">

            <Image
                ohos:id="$+id:up_button"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:up"/>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="60vp"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:orientation="horizontal">
            <DirectionalLayout
                ohos:height="50vp"
                ohos:width="60vp"
                ohos:alignment="center"
                ohos:background_element="$graphic:background_ability_remote_input">
                <Image
                    ohos:id="$+id:left_button"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:left"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="50vp"
                ohos:width="60vp"
                ohos:alignment="center"
                ohos:margin="30vp"
                ohos:background_element="$graphic:background_ability_remote_input">
                <Image
                    ohos:id="$+id:ok_button"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:OK"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="50vp"
                ohos:width="60vp"
                ohos:alignment="center"
                ohos:background_element="$graphic:background_ability_remote_input">
                <Image
                    ohos:id="$+id:right_button"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:right"/>
            </DirectionalLayout>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="60vp"
            ohos:top_margin="25vp"
            ohos:background_element="$graphic:background_ability_remote_input"
            ohos:alignment="center">

            <Image
                ohos:id="$+id:down_button"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:down"/>

        </DirectionalLayout>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:alignment="center"
        ohos:height="match_content"
        ohos:width="match_parent">
        <Button
            ohos:id="$+id:refresh"
            ohos:background_element="$graphic:background_button"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="刷新"
            ohos:text_size="24vp"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:alignment="center"
        ohos:height="200vp"
        ohos:width="match_parent"
        ohos:padding="20vp">
        <Image
            ohos:id="$+id:preview"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:scale_mode="zoom_center"
            />
    </DirectionalLayout>
</DirectionalLayout>